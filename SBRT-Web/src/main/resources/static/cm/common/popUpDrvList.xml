<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:w2="http://www.inswave.com/websquare"
	xmlns:xf="http://www.w3.org/2002/xforms">
	<head>
		<w2:type>DEFAULT</w2:type>
		<w2:buildDate />
		<xf:model>
			<xf:instance>
				<data xmlns="" />
			</xf:instance>
			<w2:dataCollection baseNode="map">
				<w2:dataList baseNode="list" repeatNode="map" id="dlt_BMS_DRV_MST" saveRemovedData="true">
					<w2:columnInfo>
						<w2:column id="chk" name="선택" dataType="text"></w2:column>
						<w2:column id="DRV_ID" name="운전자ID" dataType="text"></w2:column>
						<w2:column id="DRV_NM" name="운전자명" dataType="text"></w2:column>
						<w2:column id="BUS_DIV" name="버스구분" dataType="text"></w2:column>
						<w2:column id="REMARK" name="비고" dataType="text"></w2:column>
					</w2:columnInfo>
				</w2:dataList>
				<w2:dataMap baseNode="map" id="dma_search">
					<w2:keyInfo>
						<w2:key id="TYPE" name="name1" dataType="text"></w2:key>
						<w2:key id="CONTENT" name="name2" dataType="text"></w2:key>
						<w2:key id="USE_YN" name="name3" dataType="text"></w2:key>
						<w2:key id="REP_ROUT_ID" name="name3" dataType="text"></w2:key>
					</w2:keyInfo>
				</w2:dataMap>
			</w2:dataCollection>
			<w2:workflowCollection></w2:workflowCollection>
			<xf:submission id="sub_drvList" ref='data:json,dma_search' target="data:json,dlt_BMS_DRV_MST" action="/drv/selectDrvList" method="post"
				mediatype="application/json" encoding="UTF-8" instance="" replace="" errorHandler="" customHandler="" mode="asynchronous" processMsg=""
				ev:submit="" ev:submitdone="scwin.sub_drvList_submitdone" ev:submiterror="" abortTrigger="">
			</xf:submission>
		</xf:model>
		<script type="text/javascript" lazy="false"><![CDATA[
        
	scwin.onpageload = function() {
		scwin.param = com.getParameter();
		
		scwin.closeCallbackFncName = scwin.param.callbackFn;
		com.setEnterKeyEvent(popup_header, scwin.btn_search_onclick);
		var btnOptions = 
		[
			{userStr:"조회", auth: gcm.BTN.SEARCH, cbFnc: scwin.btn_search_onclick}
		];
		com.setMainBtn3(wfm_mainBtn, btnOptions);
		
		var codeOptions = [ {code : "BUS_DIV", compID : "drvListGrid:BUS_DIV" }];
		
		
		dma_search.set("REP_ROUT_ID", scwin.param.data);
		com.setCommonDtl(codeOptions, function() {
			com.executeSubmission(sub_drvList);	
		});
		
		//com.executeSubmission(sub_drvList);			
	};
	
	scwin.onpageunload = function() {
		
	};
	
	scwin.btn_search_onclick = function() {
		com.executeSubmission(sub_drvList);
	};
	
	scwin.btn_confirm_onclick = function() {
		var data = drvListGrid.getCheckedJSON("chk");
		
		if(data == null || data == ''){
			var nullData = [{"DRV_ID" : ''}];
			
			com.closePopup(scwin.closeCallbackFncName, nullData);
		}
		else{
			com.closePopup(scwin.closeCallbackFncName, data);
		}
		
	
		//var data = AL0302P1.getCheckedJSON("chk");
		//com.closePopup(scwin.closeCallbackFncName, data);
	};
		
	scwin.btn_cancel_onclick = function() {
		com.closePopup();
	};
	
	scwin.drvListGrid_onrowindexchange = function(row,oldRow) {
		drvListGrid.setCellChecked(row,"chk",true);
	};
	
	scwin.sbx_ChoiceBox_onviewchange = function(info) {		
		if (info.newValue == "ALL") {
			search_input.setPlaceholder("운전자ID 또는 운전자명");
		} else if (info.newValue == "DRV_ID") {
			search_input.setPlaceholder("운전자ID");
		} else if (info.newValue == "DRV_NM") {
			search_input.setPlaceholder("운전자명");
		}
	};
	
	scwin.sub_drvList_submitdone = function(e) {
		var sCode = com.getResultCode(e);
		if (sCode == gcm.MESSAGE_CODE.STATUS_SUCCESS) {
		
		}
	};
	
	//데이터 없음 - 그리드 disabled 처리
	scwin.NullData_onviewchange = function(info) {
	
		if(info.checked == true){
			com.executeSubmission(sub_drvList);
			drvListGrid.setDisabled("grid", true);
			drvListGrid.setDisabled("column","chk",true);
		}
		else{
			drvListGrid.setDisabled("grid", false);
			drvListGrid.setDisabled("column","chk",false);
		}
		
	};
	]]></script>
	</head>
	<body ev:onpageload="scwin.onpageload" ev:onpageunload="scwin.onpageunload">
		<xf:group class="popup_container grdr_36_a_40" id="popup_container" style="">
			<xf:group id="popup_header" style="" class="popup_header">
				<xf:group class="gr_search" id="" style="">
					<xf:group class="label" id="" style="">
						<w2:span class="" id="" label="검색항목"></w2:span>
					</xf:group>
					<xf:group class="search" id="" style="">
						<xf:select1 id="" disabledClass="w2selectbox_disabled" ref="data:dma_search.TYPE" appearance="minimal"
							style="" class="search_type" direction="auto" chooseOption="" displayMode="label" allOption=""
							ev:onviewchange="scwin.sbx_ChoiceBox_onviewchange" optionOrder="false" submenuSize="auto"
							disabled="false" textAlign="left">
							<xf:choices>
								<xf:item>
									<xf:label><![CDATA[전체]]></xf:label>
									<xf:value><![CDATA[ALL]]></xf:value>
								</xf:item>
								<xf:item>
									<xf:label><![CDATA[운전자ID]]></xf:label>
									<xf:value><![CDATA[DRV_ID]]></xf:value>
								</xf:item>
								<xf:item>
									<xf:label><![CDATA[운전자명]]></xf:label>
									<xf:value><![CDATA[DRV_NM]]></xf:value>
								</xf:item>
							</xf:choices>
						</xf:select1>
						<xf:input id="search_input" class="search_input" ref="data:dma_search.CONTENT" placeholder="운전자ID 또는 운전자명"></xf:input>
						<xf:select id="NullData" selectedIndex="-1" appearance="full" style="margin-left: 10px;float: left;margin-top: 2px;"
							ev:onviewchange="scwin.NullData_onviewchange" cols="" rows="" ref="">
							<xf:choices>
								<xf:item>
									<xf:label><![CDATA[데이터없음]]></xf:label>
									<xf:value><![CDATA[Y]]></xf:value>
								</xf:item>
							</xf:choices>
						</xf:select>		
					</xf:group>
					<w2:wframe id="wfm_mainBtn" class="" style="" src="/cm/common/wf_mainBtn.xml" scope="true"></w2:wframe>
				</xf:group>
			</xf:group>
			<xf:group style="" id="" class="popup_content">
				<w2:gridView  fixedColumnWithHidden="true" dataList="data:dlt_BMS_DRV_MST" useShiftKey="false" readOnly="true"
					style="" scrollByColumn="false" id="drvListGrid" autoFit="" class="cm_grid popup"
					ev:onrowindexchange="scwin.drvListGrid_onrowindexchange">
					<w2:header style="" id="header1">
						<w2:row style="" id="row1">
							<w2:column blockSelect="true" id="chkHeader" inputType="radio" style="height:20px" value="선택" width="39">
							</w2:column>
							<w2:column blockSelect="false" id="column7" inputType="text" style="height:20px" value="운전자ID"
								width="100">
							</w2:column>
							<w2:column blockSelect="false" id="column1" inputType="text" style="height:20px" value="운전자명" 
								width="200">
							</w2:column>
							<w2:column blockSelect="false" id="column2" inputType="text" style="height:20px" value="버스구분"
								width="100">
							</w2:column>
							<w2:column blockSelect="false" id="column3" inputType="text" style="height:20px" value="비고"
								width="100">
							</w2:column>
						</w2:row>
					</w2:header>
					<w2:gBody id="gBody1" style="">
						<w2:row id="row2" style="">
							<w2:column blockSelect="false" defaultValue="" falseValue="0" id="chk" inputType="radio" readOnly="false"
								style="height:20px" trueValue="1" width="39" viewType="" typeGetter="">
							</w2:column>
							<w2:column blockSelect="false" id="DRV_ID" inputType="text" style="height:20px" 
								width="101">
							</w2:column>
							<w2:column blockSelect="false" id="DRV_NM" inputType="text" style="height:20px" width="90" 
								textAlign="">
							</w2:column>
							<w2:column blockSelect="false" id="BUS_DIV" inputType="select" style="height:20px" width="90" 
								textAlign="">
							</w2:column>
							<w2:column blockSelect="false" id="REMARK" inputType="text" style="height:20px" width="90" 
								textAlign="">
							</w2:column>
						</w2:row>
					</w2:gBody>
				</w2:gridView>
			</xf:group>
			<xf:group id="" style="" class="popup_bottom">
				<w2:anchor id="btn_confirm" style="" ev:onclick="scwin.btn_confirm_onclick" class="btn_cm">
					<xf:label><![CDATA[확인]]></xf:label>
				</w2:anchor>
				<w2:anchor id="btn_cancel" style="" ev:onclick="scwin.btn_cancel_onclick" class="btn_cm" outerDiv="">
					<xf:label><![CDATA[취소]]></xf:label>
				</w2:anchor>
			</xf:group>
		</xf:group>
	</body>
</html>