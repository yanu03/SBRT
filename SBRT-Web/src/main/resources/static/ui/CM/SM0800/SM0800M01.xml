		};
		
		var mainOptions = {
			SAVE: scwin.btn_ServiceKey_onclick
		};
		
		com.setMainBtn2(wfm_mainBtn, gcm.DISP_TYPE.SINGLE_GRID_FORM, autoOptions, mainOptions);
		
		com.executeSubmission(sub_SM0800SHI0);
		com.executeSubmission(sub_SM0800G0R0);
	};
	
	scwin.onpageunload = function() {
	
	};
	
	/**
	 * 검색항목(selectBox)의 내용이 변경되었을 때 실행된다.
	 * 직위면 inputBox를 hidden, selectBox를 띄운다. 
	 */
	scwin.sbx_ChoiceBox_onviewchange = function(info) {		
		if (info.newValue == "ALL") {
			acb_autoChoiceBox.hide();
			search_input.setValue("");
			search_input.show("");
		} else if (info.newValue == "API_ID") {
			search_input.hide();
			acb_autoChoiceBox.setNodeSet("data:dlt_memberSearchItem", "API_ID", "API_ID");
			acb_autoChoiceBox.show("");
		} else if (info.newValue == "API_NAME") {
			search_input.hide();
			acb_autoChoiceBox.setNodeSet("data:dlt_memberSearchItem", "API_NAME", "API_NAME");
			acb_autoChoiceBox.show("");
		}
	};
	
	
	/**
	 * 저장 버튼 클릭한다.
	 */
	scwin.btn_ServiceKey_onclick = function() {
		var modifiedIdx = dlt_BMS_API_INFO.getModifiedIndex();
		var modifiedRowCount = modifiedIdx.length;
		
		var accIp1 = ACC_IP1.getValue();
		var accIp2 = ACC_IP2.getValue();
		var accIp3 = ACC_IP3.getValue();
		var accIp4 = ACC_IP4.getValue();
		var accIp = accIp1 +'.'+accIp2 +'.'+ accIp3 +'.'+ accIp4
		dlt_BMS_API_INFO.setCellData(SM0800G0.getFocusedRowIndex(), "ALLOWED_IP", accIp);
		
		if (com.validateGridTableView(SM0800G0, SM0800F0) && modifiedRowCount > 0) {
			com.confirm(modifiedRowCount + "건의 데이타를 반영하시겠습니까", function(rtn) {
				if (rtn) { 
					com.executeSubmission(sub_SM0800G0S0);
				}
			});
		}
		
	};
	
	/**
	 * 저장 콜백 메소드
	 */
	scwin.sub_SM0800G0S0_submitdone = function(e) {
		var sCode = com.getResultCode(e);
		if (sCode == gcm.MESSAGE_CODE.STATUS_SAVE) {
			com.searchGrid(SM0800G0, sub_SM0800G0R0);
		}
	};

	
	scwin.SM0800G0_onrowindexchange = function(row, oldRow) {
		var allIp = dlt_BMS_API_INFO.getCellData(row, "ALLOWED_IP");
		var allIpArray = allIp.split('.');
		
		if(allIp != ""){
			ACC_IP1.setValue(allIpArray[0]);
			ACC_IP2.setValue(allIpArray[1]);
			ACC_IP3.setValue(allIpArray[2]);
			ACC_IP4.setValue(allIpArray[3]);
		}else{
			ACC_IP1.setValue("");
			ACC_IP2.setValue("");
			ACC_IP3.setValue("");
			ACC_IP4.setValue("");
		}
		
		var dltObj = com.getGridViewDataList(SM0800G0);
		var rowStatus = dltObj.getRowStatus(row);
		if(rowStatus == 'R'){
			ACC_IP1.setDisabled(true);
			ACC_IP2.setDisabled(true);
			ACC_IP3.setDisabled(true);
			ACC_IP4.setDisabled(true);
		}else{
			ACC_IP1.setDisabled(false);
			ACC_IP2.setDisabled(false);
			ACC_IP3.setDisabled(false);
			ACC_IP4.setDisabled(false);
		}
	};
	

	scwin.sub_SM0800G0K0_submitdone = function(e) {
		com.addGridForm(SM0800G0, SM0800F0, dma_SEQ_BMS_API_INFO_0, "API_ID", "API_ID");
	};
	
	
	scwin.sub_SM0800G0R0_submitdone = function(e) {
		com.setFocusedCell(SM0800G0, "API_ID");
	};
	
	scwin.useYnDisFormatter = function(data){
		if(data == ""){
			return "";
		}else if(data == 'Y'){
			return "사용";
		}else if(data == 'N'){
			return "사용안함";
		}
	}
	
