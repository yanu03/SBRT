	/**
	 * 초기화 함수(셀렉트 박스의 항목을 가져온다)
	 */
	scwin.onpageload = function() {
	
		var autoOptions = {
			Main : { grid : SM0800G0, frm : SM0800F0, keyColumn : "API_ID", focusColumn : "API_ID", srchGrp : pgm_header
