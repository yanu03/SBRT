		var insertIndex = dlt_EMAIL_MST.insertRow();
		//dlt_EMAIL_MST.setCellData(insertIndex, "USE_YN", 'Y');
		//grd_email.setReadOnly("cell", insertIndex, "EMAIL_TITLE", false);
