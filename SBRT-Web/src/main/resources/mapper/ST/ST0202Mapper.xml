  <mapper namespace="kr.tracom.brt.domain.ST0202.ST0202Mapper">
  
    <select id="ST0202G0R0" resultType="Map" parameterType="Map">
		SELECT  ROUT_ID
				,REP_ROUT_ID
				,REP_ROUT_NM
				,ROUT_NM
				,ROUT_LEN
		FROM 
			BMS_ROUT_MST
		WHERE 
			DEL_YN != 'Y'
		<if test="@kr.tracom.util.CommonUtil@notEmpty(CONTENT)">
			AND REP_ROUT_ID = #{CONTENT}
		</if>
		ORDER BY REP_ROUT_NM
	</select>
  
  
  <select id="ST0202G1R0" resultType="Map">
  	SELECT
		A.OPER_DT,
		A.REP_ROUT_ID,
		A.ROUT_ID,
		A.OPER_SN,
		A.ALLOC_NO,
		A.STAT_H,
		A.AVRG_SPD,
		A.MAX_SPD,
		A.MIN_SPD,
		A.UPD_DTM,
		B.ARRV_TM,
		B.DPRT_TM
	FROM BRT_ROUT_AVER_OPER_SP_STAT A
		LEFT OUTER JOIN  (
		SELECT 
		  	REP_ROUT_ID
		  	,ROUT_ID
			,OPER_DT
			,OPER_SN
			,MIN(ARRV_TM) AS ARRV_TM
			,MAX(DPRT_TM) AS DPRT_TM
		 FROM BRT_SELECT_CUR_OPER_HIS WHERE OPER_DT = #{OPER_DT}
		 GROUP BY OPER_DT, OPER_SN) B
		 ON A.REP_ROUT_ID = B.REP_ROUT_ID AND A.ROUT_ID = B.ROUT_ID
	WHERE
		A.ROUT_ID = #{ROUT_ID} AND A.OPER_DT = #{F_DATE}
	GROUP BY
		A.OPER_SN
  </select>
  
